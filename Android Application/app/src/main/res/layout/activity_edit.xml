<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/loginHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            tools:ignore="MissingConstraints">

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/login_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@color/colorLoginCard"
                android:outlineAmbientShadowColor="@color/taskColor"
                card_view:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_27sdp"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Edit Customer Details"
                        android:textAlignment="center"
                        android:textColor="@color/colortaskLoginDark"
                        android:textSize="24dp"
                        android:textStyle="bold"></TextView>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Name"
                            android:textColor="@color/colortaskLoginDark"
                            android:textSize="14dp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/nameText"
                            android:layout_width="300dp"
                            android:layout_height="54dp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:ems="5"
                            android:hint="Enter name"
                            android:inputType="textCapCharacters"
                            android:paddingRight="@dimen/_40sdp"
                            android:textColor="@color/taskColorGray"
                            tools:ignore="MissingConstraints" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Username"
                            android:textColor="@color/colortaskLoginDark"
                            android:textSize="14dp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/usernameText"
                            android:layout_width="300dp"
                            android:layout_height="54dp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:ems="5"
                            android:hint="Enter username"
                            android:inputType="textCapCharacters"
                            android:paddingRight="@dimen/_40sdp"
                            android:textColor="@color/taskColorGray"
                            tools:ignore="MissingConstraints" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Email Address"
                            android:textColor="@color/colortaskLoginDark"
                            android:textSize="14dp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/emailAddressText"
                            android:layout_width="300dp"
                            android:layout_height="54dp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:ems="5"
                            android:hint=""
                            android:inputType="textEmailAddress"
                            android:paddingRight="@dimen/_40sdp"
                            android:textColor="@color/taskColorGray"
                            tools:ignore="MissingConstraints" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Street"
                            android:textColor="@color/colortaskLoginDark"
                            android:textSize="14dp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/streetText"
                            android:layout_width="300dp"
                            android:layout_height="54dp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:ems="5"
                            android:hint="Enter street"
                            android:inputType="textCapCharacters"
                            android:paddingRight="@dimen/_40sdp"
                            android:textColor="@color/taskColorGray"
                            tools:ignore="MissingConstraints" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Suite"
                            android:textColor="@color/colortaskLoginDark"
                            android:textSize="14dp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/suiteText"
                            android:layout_width="300dp"
                            android:layout_height="54dp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:ems="5"
                            android:hint="Enter suite"
                            android:inputType="textCapCharacters"
                            android:paddingRight="@dimen/_40sdp"
                            android:textColor="@color/taskColorGray"
                            tools:ignore="MissingConstraints" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="City"
                            android:textColor="@color/colortaskLoginDark"
                            android:textSize="14dp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/cityText"
                            android:layout_width="300dp"
                            android:layout_height="54dp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:ems="5"
                            android:hint="Enter city"
                            android:inputType="textCapCharacters"
                            android:paddingRight="@dimen/_40sdp"
                            android:textColor="@color/taskColorGray"
                            tools:ignore="MissingConstraints" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Zipcode"
                            android:textColor="@color/colortaskLoginDark"
                            android:textSize="14dp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/zipcodeText"
                            android:layout_width="300dp"
                            android:layout_height="54dp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:ems="5"
                            android:hint="Enter zipcode"
                            android:inputType="textCapCharacters"
                            android:paddingRight="@dimen/_40sdp"
                            android:textColor="@color/taskColorGray"
                            tools:ignore="MissingConstraints" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Latitude"
                            android:textColor="@color/colortaskLoginDark"
                            android:textSize="14dp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/latText"
                            android:layout_width="300dp"
                            android:layout_height="54dp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:ems="5"
                            android:hint="Enter latitude"
                            android:inputType="textCapCharacters"
                            android:paddingRight="@dimen/_40sdp"
                            android:textColor="@color/taskColorGray"
                            tools:ignore="MissingConstraints" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Longitude"
                            android:textColor="@color/colortaskLoginDark"
                            android:textSize="14dp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/lngText"
                            android:layout_width="300dp"
                            android:layout_height="54dp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:ems="5"
                            android:hint="Enter longitude"
                            android:inputType="textCapCharacters"
                            android:paddingRight="@dimen/_40sdp"
                            android:textColor="@color/taskColorGray"
                            tools:ignore="MissingConstraints" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Phone Number"
                            android:textColor="@color/colortaskLoginDark"
                            android:textSize="14dp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/phoneText"
                            android:layout_width="300dp"
                            android:layout_height="54dp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:ems="5"
                            android:hint="Enter phone number"
                            android:inputType="textCapCharacters"
                            android:paddingRight="@dimen/_40sdp"
                            android:textColor="@color/taskColorGray"
                            tools:ignore="MissingConstraints" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Website"
                            android:textColor="@color/colortaskLoginDark"
                            android:textSize="14dp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/websiteText"
                            android:layout_width="300dp"
                            android:layout_height="54dp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:ems="5"
                            android:hint="Enter website"
                            android:inputType="textCapCharacters"
                            android:paddingRight="@dimen/_40sdp"
                            android:textColor="@color/taskColorGray"
                            tools:ignore="MissingConstraints" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Company Name"
                            android:textColor="@color/colortaskLoginDark"
                            android:textSize="14dp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/companyNameText"
                            android:layout_width="300dp"
                            android:layout_height="54dp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:ems="5"
                            android:hint="Enter company name"
                            android:inputType="textCapCharacters"
                            android:paddingRight="@dimen/_40sdp"
                            android:textColor="@color/taskColorGray"
                            tools:ignore="MissingConstraints" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Catch Phrase"
                            android:textColor="@color/colortaskLoginDark"
                            android:textSize="14dp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/catchPhraseText"
                            android:layout_width="300dp"
                            android:layout_height="54dp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:ems="5"
                            android:hint="Enter catch phrase"
                            android:inputType="textCapCharacters"
                            android:paddingRight="@dimen/_40sdp"
                            android:textColor="@color/taskColorGray"
                            tools:ignore="MissingConstraints" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Business"
                            android:textColor="@color/colortaskLoginDark"
                            android:textSize="14dp"
                            android:textStyle="bold">

                        </TextView>

                        <EditText
                            android:id="@+id/bsText"
                            android:layout_width="300dp"
                            android:layout_height="54dp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:ems="5"
                            android:hint="Enter business"
                            android:inputType="textCapCharacters"
                            android:paddingRight="@dimen/_40sdp"
                            android:textColor="@color/taskColorGray"
                            tools:ignore="MissingConstraints" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:paddingLeft="@dimen/_30sdp"
                        android:paddingRight="@dimen/_30sdp">

                        <Button
                            android:id="@+id/updateUser"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_background_dark"
                            android:onClick="update"
                            android:text="Update"
                            android:textColor="@color/colorWhite"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="OnClick" />

                    </RelativeLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>