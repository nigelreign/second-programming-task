<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/customerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/customerEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/customerPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="26dp"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/editCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customerPhoneNumber"
        android:layout_marginLeft="@dimen/_20sdp"
        android:src="@drawable/edit"
        android:textColor="@color/colorWhite"></ImageView>

    <ImageView
        android:id="@+id/deleteCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customerPhoneNumber"
        android:layout_marginLeft="@dimen/_20sdp"
        android:src="@drawable/delete"
        android:textColor="@color/colorWhite"></ImageView>
</GridLayout>